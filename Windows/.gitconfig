[user]
	name = Lucas Santos
  email = lhs.santoss@gmail.com
[core]
	autocrlf = true
	editor = vim
[credential]
	helper = wincred
[alias]
	st = status
	co = checkout
	ps = push
	b = branch
	pl = pull
	cm = commit
	ca = commit -a
[push]
	default = simple
[rerere]
	enabled = true
[color]
	ui = auto
[diff]
	mnemonicprefix = true
	tool = vscode-diff
[difftool "vscode-diff"]
	cmd = code --diff $LOCAL $REMOTE
